{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <h1>Books ({{ pagination.getTotalItemCount }})</h1>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Description</th>
                    <th>Language</th>
                    <th>Creation date</th>
                </tr>
                </thead>
                <tbody>
                {% for book in pagination %}
                    <tr>
                        <td>
                            {{ book.title }}
                        </td>
                        <td>
                            {{ book.author }}
                        </td>
                        <td>
                            {{ book.description|raw }}
                        </td>
                        <td>
                            {{ book.language }}
                        </td>
                        <td>
                            {{ book.createdAt|ago }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">
                            No books found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
